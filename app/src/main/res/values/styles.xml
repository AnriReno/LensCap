<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AdminButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#E91E63</item>
        <item name="colorButtonNormal">@color/admin_color_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="FlatButton">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_color_selector</item>
    </style>

    <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--<item name="colorControlHighlight">#FF5722</item>-->
    <!--<item name="android:textColor">#FF5722</item>-->

</resources>
